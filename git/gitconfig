[includeIf "gitdir:~/git-work/"]
  path = ~/.gitconfig-work

[color]
  ui = auto
[push]
  default = simple
[alias]
  b = branch -a
  ch = checkout
  cb = checkout -b
  d = diff
  dt = difftool
  p = push
  pl = pull
  s = status
  c = commit
  cm = commit -am
  l = log --oneline --graph
[pull]
	rebase = true
[init]
	defaultBranch = main
[diff]
	tool = bc3
	mnemonicPrefix = true
[difftool "bc3"]
	trustExitCode = true
[merge]
	tool = bc3
[mergetool "bc3"]
	trustExitCode = true
